{
  "name": "bi-mcp-server",
  "version": "0.1.0",
  "description": "Ultra-light MCP server for Claude Desktop with < 25ms p95 latency",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "tsx watch src/index.ts",
    "start:http": "tsx src/http-wrapper.ts",
    "start:test": "NODE_ENV=test tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration/",
    "test:e2e": "jest tests/e2e/",
    "test:load": "tsx tests/load/concurrent-users.test.ts",
    "bench:context": "tsx src/benchmarks/context.bench.ts",
    "bench:full": "tsx benchmarks/full-stack.bench.ts",
    "benchmark": "npm run bench:full",
    "perf:test": "npm run test:integration && npm run test:e2e && npm run benchmark",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "security:scan": "npm audit && eslint --plugin security src"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@types/express": "^5.0.3",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "ioredis": "^5.3.2",
    "lru-cache": "^10.0.1",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "snowflake-sdk": "^1.9.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.10",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "autocannon": "^7.14.0",
    "eslint": "^8.52.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "claude",
    "snowflake",
    "activityschema",
    "bi"
  ],
  "author": "",
  "license": "MIT"
}
